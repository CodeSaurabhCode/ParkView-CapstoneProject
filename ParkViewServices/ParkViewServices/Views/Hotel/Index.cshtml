@model Hotel
<style>
    
    /*videoContainer*/

    
    .masthead-wrapper {
        position: relative;
        overflow: hidden;
        min-height: 38.8125rem;
    }

    .masthead-video {
        overflow: hidden;
        display: flex;
        justify-content: center;
        position: relative;
    }

    .video-wrapper {
        padding: 0;
        line-height: 0;
        height: 38.8125rem;
    }

    .masthead-video video {
        width: 100vw;
        height: 100%;
        object-fit: cover;
    }

    .masthead-content.container {
    padding-bottom: 65px;
    padding-left:80px;
}
.masthead-content {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 50%;
    transform: translate(-50%);
    color: #fff;
    display: flex;
    flex-direction: column;
    z-index: 3;
    animation: masthead-opacity-fadeIn-animation 2s;
    justify-content: flex-end;
}
@@media only screen and (min-width: 576px)
.container {
    padding-left: 16px;
    padding-right: 16px;
}
.container {
    
    margin-right: auto;
    margin-left: auto;
    
    max-width: 100%;
}

    .masthead-eyebrow {
        
        font-size: 1.3rem;
        color: #fff;
        margin-bottom: 8px;
        font-family: AkkuratLLWebPan-Regular,Arial,sans-serif;
    }

    .masthead-title {
        font-family: "Didot LT W02 Roman",Garamond,Times New Roman,serif; color: #fff;
        font-size: 5.5rem;
        line-height: 1.2;
        letter-spacing: -2px;
        font-weight: 400;
    }

    /*detailsContainer*/

    .detailsDiv {
        display: flex;
        
        width: 100%;
        margin-top:70px;
        padding-left:50px;
        padding-right:50px;
        margin-right: auto;
        margin-left: auto;
        
        max-width: 100%;
        line-height: 1.2;
        height: 100%;
        color: #242021;
    }

    .detailsDiv-right {
        padding: 30px 32px;
        margin-right:40px;
        
        width: 150%;
        
        background-color: #f5f5f5;
        
        margin-top: -3px;
    }

     

    

    .DetailsDiv-right-content h3{
            font-size: 3rem;
            font-weight: 400;
            font-family: "Didot LT W02 Roman",Garamond,Times New Roman,serif;
            
    }

    .detailsFont {
        font-size: 1rem;
        line-height: 1.5;
        letter-spacing: -.36px;
        font-family: AkkuratLLWebPan-Regular,Arial,sans-serif;
    }


    .sec {
        width: 80%;
        margin: 0 auto;
        line-height: 0;
        position: relative;
        overflow:hidden;
        height:100%;
        background-color: rgba(0,0,0,0);
    }

     .sec img {
            width: 100%;
        }

        .sec article {
            position: absolute;
            top: 0;
            width: 100%;
            background: white;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            grid-gap: 20px;
            mix-blend-mode: lighten;
        }

        .sec .division {
            background: black;
            
        }

            .sec .division:nth-of-type(2) {
                grid-column: 0.5;
            }

            .text-primary1{
        color: #FEA116;
        !important;
            }



</style>
